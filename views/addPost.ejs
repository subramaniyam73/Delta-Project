<%- include('partials/header') %>
<%-include("partials/navBar")%>

<div class="addPostBox">
  <form action="/createPost" method="post" enctype="multipart/form-data">
    <!-- <textarea name="mytextarea" id="mytextarea" placeholder="Content here !"></textarea> -->
    <textarea name="mytextarea" rows="5" cols="60" placeholder="Type here ..."></textarea>
    <button type="button" name="button" id="openFile"><img src="/images/add.png" width="40px" height="40px" alt=""></button>
    <input type="file" name="file" id="file" value="">
    <button type="submit" name="addPostButton">Add Post</button>

  </form>
</div>

<script>
  tinymce.init({
    selector: '#mytextarea'
  });

  $("#file").toggle();
  $("#openFile").on("click",(e)=>{
    $("#file").toggle();
  });

</script>
