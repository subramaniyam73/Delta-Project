      <h2>Update your profile</h2>

      <a href="#" id="profileLink">Update Profile Picture</a>

      <div id="profileForm">
        <form id="" action="/images/profileImages/<%=user._id%>" method="post" enctype="multipart/form-data">
          <span>Upload Profile Picture :</span>
          <input type="hidden" name="type" value="profile">
          <input type="file" name="file" value="">
          <button type="submit" name="button">Upload</button>
        </form>
      </div>
      <a href="#" id="coverLink">Update Cover Picture</a>
      <div id="coverForm">
        <form id="" action="/images/profileImages/<%=user._id%>" method="post" enctype="multipart/form-data">
          <span>Upload Cover Picture :</span>
          <input type="hidden" name="type" value="cover">
          <input type="file" name="file" value="">
          <button type="submit" name="button">Upload</button>
        </form>
      </div>

      <form class="updateForm" action="/users/<%=user._id%>/submitUpdateProfile" method="POST">
        <textarea name="bio" rows="4" cols="50" placeholder="Enter bio" value="<%=user.bio%>"></textarea><br>
        <input type="text" name="relStatus"  value="<%=user.relStatus%>" placeholder="Relationship Status"><br>
        <input type="text" name="workPos"value="<%=user.work.pos%>" placeholder="Working as :"><br>
        <input type="text" name="workOrg"value="<%=user.work.org%>" placeholder="Working in :"><br>
        <input type="text" name="collegeDeg"value="<%=user.college.deg%>" placeholder="College Degree"><br>
        <input type="text" name="collegeOrg"value="<%=user.college.org%>" placeholder="College"><br>
        <input type="text" name="schoolOrg" value="<%=user.school.org%>" placeholder="School"><br>
        <label for="birthDay">Birthday :   </label>
        <input type="date" name="birthDay" id="birthDay" max="2001-12-31" required>
        <div class="interestsBox">
          <%user.interests.forEach((interest)=>{%>
            <input type="text" value="<%=interest%>" name="interests[]" placeholder="Enter interest">
          <%});%>
        </div>
        <button type="button" name="insertTextBox" id="insertTextBox">Add Interest</button>
        <button type="submit" name="update">Update Profile</button>
      </form>




      <script type="text/javascript">

        $("#insertTextBox").on("click",(e)=>{
          console.log("??");
          $(".interestsBox").append(`<input type="text" placeholder="Enter interest" name="interests[]">`);
        });

      </script>








